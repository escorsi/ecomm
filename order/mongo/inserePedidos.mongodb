use('ecomm-account');
db.users.aggregate([
    {
        $match: {
            nome: "Olnar"
        }
    }, {
        $project: {
            _id: 0,
            id_usuario: "$_id",
            nome: "$nome",
            data: ISODate(),
            produtos: "$carrinho.produtos",
            endereco: {
                rua: "Rua da Pedra do Reino",
                numero: 725,
                complemento: "",
                cep: "58069-545",
                cidade: "Jo√£o Pessoa",
                estado: "PB"
            }
        }
    }, {
        $merge: {
            into: {db: 'ecomm-order', coll: 'orders'}
        }
    }
])

db.users.updateOne({
    nome: 'Olnar'
}, {
    $set: {
        'carrinho.produtos': []
    }
});

